{
  "compilerOptions": {
    "lib": ["es2016", "dom"],
    "module": "esnext",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "types": ["@types/twitter"],
  "compileOnSave": true,
  "include": ["web", "scripts", "cron"]
}
