{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "deploy": "firebase deploy --only functions",
    "dump:runtimeconfig": "firebase functions:config:get > .runtimeconfig.json",
    "lint": "tslint --project tsconfig.json",
    "logs": "firebase functions:log",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "test": "jest"
  },
  "main": "lib/index.js",
  "dependencies": {
    "express": "4.17.3",
    "express-handlebars": "6.0.2",
    "firebase-admin": "10.0.2",
    "firebase-functions": "3.17.2",
    "handlebars": "4.7.7",
    "twit": "2.2.11"
  },
  "devDependencies": {
    "@types/jest": "27.4.0",
    "@types/twit": "2.2.30",
    "firebase-tools": "10.1.5",
    "jest": "27.5.0",
    "ts-jest": "27.1.3",
    "tslint": "6.1.3",
    "twitter-d": "0.4.0",
    "typescript": "4.5.5"
  },
  "engines": {
    "node": "16",
    "npm": "7"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,ts,tsx}"
    ]
  },
  "private": true
}
